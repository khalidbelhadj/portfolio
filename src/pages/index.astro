---
import "../styles/globals.css";
import { LOCATION_CHANNEL, DEFAULT_LOCATION, projects } from "../consts";
import Head from "../components/Head.astro";

let location = DEFAULT_LOCATION;
try {
  const data = await fetch(LOCATION_CHANNEL);
  if (!data.ok) throw new Error("Failed to fetch location data");
  const json = await data.json();
  const lastEntryId = +json["channel"]["last_entry_id"];
  if (!lastEntryId) return DEFAULT_LOCATION;
  const lastEntry = (json["feeds"] as any[]).find(
    (e) => +e["entry_id"] === lastEntryId
  );
  if (!lastEntry) return DEFAULT_LOCATION;
  const region = lastEntry["field1"];
  const city = lastEntry["field2"];
  location = `${city}, ${region}`;
} catch (e) {
  console.error(e);
}
---

<html lang="en" class="bg-background w-dvw text-sm overflow-y-auto">
  <Head />
  <body class="w-full">
    <div
      class="max-w-screen-md mx-auto max-md:pb-10 md:border-x min-h-screen flex flex-col bg-background p-10"
    >
      <!-- Header -->
      <div
        class="flex items-center justify-between text-foreground/50 font-light"
      >
        <div>Khalid Belhadj</div>
        Currently in {location}
      </div>

      <div class="pt-10">
        Currently finishing up uni, probably going to big tech
      </div>

      <!-- Projects -->
      <div class="pt-10">
        <h1 class="font-semibold">Projects</h1>
        <div class="flex flex-col gap-5 pt-5">
          {
            projects.map((p) => (
              <a href={p.url} target="_blank" class="group">
                <div>
                  <span class="font-medium group-hover:underline">
                    {p.name}
                  </span>
                  <span class="text-foreground/50 font-light">({p.year})</span>
                </div>
                <div class="text-foreground/75 font-light">{p.description}</div>
              </a>
            ))
          }
        </div>
      </div>

      <div class="pt-10">
        <h1 class="font-semibold">Posts</h1>
        <div class="italic text-foreground/75 font-light">
          Maybe some day...
        </div>
      </div>

      <div class="mt-auto pt-10 flex items-center justify-between">
        <div class="flex items-center gap-1">
          <a
            href="https://www.github.com/khalidbelhadj"
            target="_blank"
            class="bg-accent rounded-full px-2 border w-fit text-sm text-foreground/75"
          >
            GitHub
          </a>

          <a
            href="https://www.linkedin.com/in/khalidbelhadj"
            target="_blank"
            class="bg-accent rounded-full px-2 border w-fit text-sm text-foreground/75"
          >
            LinkedIn
          </a>
        </div>

        <div>
          <div class="text-foreground/50 font-light">
            &#169; {new Date().getFullYear()} Khalid Belhadj
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

<script is:inline>
  window.setDark = (dark) => {
    document.documentElement.classList.toggle("dark", dark);
  };

  // Watch os theme change
  window
    .matchMedia("(prefers-color-scheme: dark)")
    .addEventListener("change", (e) => setDark(e.matches));
</script>

<script is:inline data-astro-rerun>
  setDark(window.matchMedia("(prefers-color-scheme: dark)").matches);
</script>
